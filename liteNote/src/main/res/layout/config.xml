<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/chkDeleteWarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_checkbox_warn_delete_note" />
    
    <CheckBox
        android:id="@+id/chkDeletePageWarn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_checkbox_warn_delete_page" />

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/config_button_back" />
    
</LinearLayout>